<% if flash[:notice] %>
<div class="alert alert-danger" role="alert">
  <h3>Error Logging In</h3>
  <ul>
    <li><%= flash[:notice] %></li>
  </ul>
</div>
<% end %>
<% if flash[:success] %>
<div class="alert alert-success" role="alert">
  <h3>Success!</h3>
  <ul>
    <li><%= flash[:success] %></li>
  </ul>
</div>
<% end %>
<!-- form will POST to '/login' -->
<div class="card">
  <div class="card-body">
    <h3 class="card-title">Login</h3>
    <%= form_tag(login_path) do %>
    <div class="form-group">
      <%= label_tag :username %>
      <%= text_field_tag :username, nil, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= label_tag :password %>
      <%= password_field_tag :password, nil, class: 'form-control' %>
    </div>
      <%= submit_tag 'Login', :class => 'btn btn-primary' %> <%= link_to 'Home page', root_path, :class => 'btn btn-primary'%>
      <% end %>
    <br>
  </div>
</div>
